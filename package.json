{
  "name": "pdf-generator",
  "version": "1.0.0",
  "description": "Serverless API for generating PDFs",
  "private": true,
  "workspaces": {
    "packages": [
      "api"
    ],
    "nohoist": [
      "**/api/**"
    ]
  },
  "devDependencies": {
    "@askeladden/eslint-config-askeladden": "0.2.1",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "babel-eslint": "^10.0.2",
    "eslint": "^7.4.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^4.0.8",
    "eslint-plugin-unused-imports": "^1.1.0",
    "prettier": "^2.0.5",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "test:all": "yarn workspaces run test --ci --coverage",

    "lint": "eslint .",
    "lint:ignore-warnings": "eslint . --quiet",
    "lint:prettier-check": "prettier --check \"**/*.{js,jsx,ts,tsx,json}\"",
    "lint:prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,json,mdx,md}\""
  },
  "author": "",
  "license": "ISC"
}
