{
  "name": "functions",
  "scripts": {
    "build": "tsc -b && cp src/graphql/schema.graphql lib/graphql/",
    "start": "npm run build && node lib/index.js",
    "schema:generate-document": "gqlg --schemaFilePath ./src/graphql/schema.graphql --destDirPath ./src/graphql/generated/documents --depthLimit 5",
    "deploy": "npm run build && gcloud functions deploy graphql --entry-point handler --runtime nodejs14 --trigger-http --region=europe-central2 --allow-unauthenticated"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "apollo-server-cloud-functions": "^2.25.2",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.14.1",
    "graphql": "^15.5.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "firebase-functions-test": "^0.2.0",
    "gql-generator": "^1.0.12",
    "typescript": "^3.8.0"
  },
  "private": true
}
